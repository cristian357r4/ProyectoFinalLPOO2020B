<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>

<table>
  <thead>
    <tr>
      <th>Domicilio</th>
      <th>Civil</th>
      <th>Nss</th>
      <th>Edad</th>
      <th>Peso</th>
      <th>Talla</th>
      <th>Imc</th>
      <th>T sangre</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pacientes.each do |paciente| %>
      <tr>
        <td><%= paciente.domicilio %></td>
        <td><%= paciente.civil %></td>
        <td><%= paciente.nss %></td>
        <td><%= paciente.edad %></td>
        <td><%= paciente.peso %></td>
        <td><%= paciente.talla %></td>
        <td><%= paciente.imc %></td>
        <td><%= paciente.t_sangre %></td>
        <td><%= link_to 'Show', paciente %></td>
        <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
        <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


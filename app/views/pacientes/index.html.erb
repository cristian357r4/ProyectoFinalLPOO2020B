<p id="notice"><%= notice %></p>

<h1>Pacientes</h1>
<div class="container container-fluid">
  <table id="pdttb" class="table table-hover">
    <thead>
      <tr>
        <th>Domicilio</th>
        <th>Civil</th>
        <th>Nss</th>
        <th>Edad</th>
        <th>Peso</th>
        <th>Talla</th>
        <th>Imc</th>
        <th>T sangre</th>
        <th>Ver</th>
        <th>Editar</th>
        <th>Eliminar</th>
      </tr>
    </thead>

    <tbody>
      <% @pacientes.each do |paciente| %>
        <tr>
          <td><%= paciente.domicilio %></td>
          <td><%= paciente.civil %></td>
          <td><%= paciente.nss %></td>
          <td><%= paciente.edad %></td>
          <td><%= paciente.peso %></td>
          <td><%= paciente.talla %></td>
          <td><%= paciente.imc %></td>
          <td><%= paciente.t_sangre %></td>
          <td><%= link_to 'Show', paciente %></td>
          <td><%= link_to 'Edit', edit_paciente_path(paciente) %></td>
          <td><%= link_to 'Destroy', paciente, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Paciente', new_paciente_path %>
<script type="text/javascript">
  $(document).ready(function(){
      $('#pdttb').DataTable({
          language: {
              url: '//cdn.datatables.net/plug-ins/1.10.22/i18n/Spanish.json'
            }
        });
    });
</script>

<p id="notice"><%= notice %></p>

<p>
  <strong>Paciente:</strong>
  <%  paciente = Paciente.find(@consulta.paciente.id)%>
  <%= paciente.personas.last.full_name %>
</p>

<p>
  <strong>Nutriologo:</strong>
  <% nutriologo = Nutriologo.find(@consulta.nutriologo.id) %>
  <%= nutriologo.personas.last.nombre  %>
</p>

<p>
  <strong>Identificador de la Consulta:</strong>
  <%= @consulta.id%>
</p>
<p>
  <strong>Anotaciones:</strong>
  <%= @consulta.anotaciones %>
</p>
<h2>Problemas</h2>
<% for problema in @consulta.problemas %>
  <ul>
    <li>Diarrea: <%= problema.diarrea %></li>
    <li>Nauseas: <%= problema.nauseas%></li>
    <li>Obesidad: <%= problema.obesidad%></li>
    <li>Estrenimiento <%= problema.estrenimiento%></li>
    <li>Gastritis: <%= problema.gastritis %></li>
    <li>Vomito: <%= problema.vomito %></li>
    <li>Insomnio: <%= problema.insomnio %></li>
    <li>Ansiedad<%= problema.ansiedad %></li>
  </ul>
<% end %>
<!--<%#= link_to 'Edit', edit_consulta_path(@consulta) %> |-->
<%= link_to 'Agregar Problema', consulta_problemas_path(@consulta), class: 'btn btn-success' %>|
<% for signos in @consulta.signos %>
  <ul>
    <li>Diarrea: <%= signos.cabello %></li>
    <li>Nauseas: <%= signos.piel %></li>
    <li>Obesidad: <%= signos.nails %></li>
    <li>Estrenimiento <%= signos.ojos %></li>
    <li>Gastritis: <%= signos.peso_corporal %></li>
    <li>Vomito: <%= signos.presion_sanguinea %></li>
    <li>Insomnio: <%= signos.frecuencia_respiratoria %></li>
    <li>Ansiedad<%= signos.frecuencia_cardiaca %></li>
  </ul>
<% end %>
<%= link_to 'Agregar Signo', consulta_signos_path(@consulta), class: 'btn btn-success' %>|

<%= link_to 'Regresar', consulta_index_path(@consulta.paciente.id), class: 'btn btn-primary w-100 '  %>

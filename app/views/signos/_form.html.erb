<%= form_with(model: [@consulta,signo], local: true) do |form| %>
  <% if signo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(signo.errors.count, "error") %> prohibited this signo from being saved:</h2>

      <ul>
      <% signo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :cabello %>
    <%= form.radio_button :cabello, 0, :checked => true %> Saludable
    <%= form.radio_button :cabello, 1 %> Con dano
  </div>

  <div class="field">
    <%= form.label :piel %>
    <%= form.radio_button :piel, 0, :checked => true %> Saludable
    <%= form.radio_button :piel, 1 %> Con dano
  </div>

  <div class="field">
    <%= form.label :nails %>
    <%= form.radio_button :nails, 0, :checked => true %> Saludable
    <%= form.radio_button :nails, 1 %> Con dano
  </div>

  <div class="field">
    <%= form.label :ojos %>
    <%= form.radio_button :ojos, 0, :checked => true %> Saludable
    <%= form.radio_button :ojos, 1 %> Amarillentos o aparrincia poco saludable
  </div>

  <div class="field">
    <%= form.label :peso_corporal %>
    <%= form.number_field :peso_corporal %>
  </div>

  <div class="field">
    <%= form.label :presion_sanguinea %>
    <%= form.number_field :presion_sanguinea %>
  </div>

  <div class="field">
    <%= form.label :frecuencia_respiratoria %>
    <%= form.number_field :frecuencia_respiratoria %>
  </div>

  <div class="field">
    <%= form.label :frecuencia_cardiaca %>
    <%= form.number_field :frecuencia_cardiaca %>
  </div>

  <div class="actions">
    <%= form.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>

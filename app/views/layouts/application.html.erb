<!DOCTYPE html>
<html>
<head>
  <title>Nutri Smart</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  <%= stylesheet_link_tag 'sb-admin-2', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'sb-admin-2', 'data-turbolinks-track': 'reload' %>

  <script src="https://kit.fontawesome.com/ad04fcca62.js" crossorigin="anonymous"></script>
  <link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

</head>

<body id="page-top">
<!--Page Wrapper -->
<div id="wrapper">
  <!-- Sidebar -->
  <%= render 'layouts/sidebar' unless @disable_nav %>
  <!-- End of Sidebar -->

  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">
    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      <%= render 'layouts/topbar' unless @disable_nav%>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">
        <div>
          <% flash.each do |name, msg| %>
            <div class='alert alert-<%= "#{name}" %>'>
              <a href="#" class="close" data-dismiss="alert">&#215</a>
              <%= content_tag :div, msg, :id => "flash_#{name}" if msg.is_a?(String) %>
            </div>
          <% end %>
        </div>
        <%= yield %>
      </div>

    </div>
    <!-- End of Main Content -->

    <!-- Footer -->
    <footer class="sticky-footer bg-white">
      <div class="container my-auto">
        <div class="copyright text-center my-auto">
          <span>LPOO&copy; Proyecto2020</span>
          <%= debug(params) if Rails.env.development? %>
        </div>
      </div>
    </footer>
    <!-- End of Footer -->

  </div>
  <!-- End of Content Wrapper -->
</div>
<!-- End of Page Wrapper -->

<%= render 'layouts/logoutmodal' %>

</body>
</html>

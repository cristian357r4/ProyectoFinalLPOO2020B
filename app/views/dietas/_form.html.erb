<%= form_with(model: dieta, id: 'formulario_dieta', url: url, local: true) do |dieta| %>
  <%= dieta.hidden_field(:paciente_id, :value => params[:paciente_id]) %>
  <% #form.collection_select :alimento_id, Alimento.order(:nombre), :id, :nombre, include_blank: true %>
  <div class="form-group">
    <%= dieta.label 'Alimento' %><br>
    <%= dieta.collection_select :alimento_id, Alimento.order(:nombre), :id, :nombre, include_blank: true %>
  </div>
  <div class="form-group">
    <%= dieta.label 'Comida' %><br>
    <div class="row">
      <div class="col-2">
        <%= dieta.radio_button :comida,1, :checked => true%>Desayuno
      </div>
      <div class="col-2">
        <%= dieta.radio_button :comida,2%>Colacion
      </div>
      <div class="col-2">
        <%= dieta.radio_button :comida,3%>Comida
      </div>
      <div class="col-2">
        <%= dieta.radio_button :comida,4%>Cena
      </div>
    </div>
  </div>
  <div class="actions">
    <%= dieta.submit 'Guardar', class: 'btn btn-primary' %>
  </div>
<% end %>

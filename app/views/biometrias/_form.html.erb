<%= form_with(model: biometria, id: 'formulario_biometria', url: url, local: true) do |biometria|%>
  <%= biometria.hidden_field(:paciente_id, :value => params[:paciente_id]) %>
  <div class="form-group">
    <%= biometria.label "Globulos Rojos" %><br>
    <%= biometria.number_field :globulos_rojos%>
  </div>
  <div class="form-group">
    <%= biometria.label "Globulos Blancos" %><br>
    <%= biometria.number_field :globulos_blancos%>
  </div>
  <div class="form-group">
    <%= biometria.label "Plaquetas" %><br>
    <%= biometria.number_field :plaquetas %>
  </div>
  <div class="form-group">
    <%= biometria.label "Hemoglobina" %><br>
    <%= biometria.number_field :hemoglobina %>
  </div>
  <div class="form-group">
    <%= biometria.label "Hematocritos"%><br>
    <%= biometria.number_field :hematocritos %>
  </div>
  <div class="form-group">
    <%= biometria.label "Neutrofilos" %><br>
    <%= biometria.number_field :neutrofilos%>
  </div>
  <div class="form-group">
    <%= biometria.label "Monocitos" %><br>
    <%= biometria.number_field :monocitos%>
  </div>
  <div class="form-group">
    <%= biometria.label "Linfocitos" %><br>
    <%= biometria.number_field :linfocitos%>
  </div>
  <div class="actions">
    <%= biometria.submit "Guardar datos", class: "btn btn-primary" %>
  </div>
<% end %>

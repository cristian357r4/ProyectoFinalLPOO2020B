<div class="card o-hidden border-0 shadow-lg my-5">
  <div class="card-body p-0">
    <!-- Nested Row within Card Body -->
    <div class="row">
      <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
      <div class="col-lg-7">
        <div class="p-5">
          <div class="text-center">
            <h1 class="h4 text-gray-900 mb-4">Crea tu Cuenta!</h1>
          </div>
          <%= form_with(model: @persona,url: guardar_nutriologo_path ,local: true , class: 'user', id: 'formulario_registro_nutriologo' ) do |persona| %>
            <div class="form-group">
              <%= persona.text_field :nombre, placeholder: "Introduzaca su Nombre", class: ' form-control form-control-user' %>
            </div>
            <div class="form-group">
              <%= persona.text_field :paterno, placeholder: "Paterno" , class: ' form-control form-control-user'%>
            </div>
            <div class="form-group">
              <%= persona.text_field :materno, placeholder: "Materno" , class: ' form-control form-control-user'%>
            </div>
            <div class="form-group">
              <%= persona.select :sexo, options_for_select([["Seleccione uno",nil], %w[Hombre H], %w[Mujer M], %w[Otro O]] , class: ' form-control form-control-user')%>
            </div>
            <div class="form-group">
              <%= persona.telephone_field(:telefono, placeholder: "telefono" , class: ' form-control form-control-user')%>
            </div>
            <div class="form-group">
              <%= persona.email_field(:correo, placeholder: 'correo' , class: ' form-control form-control-user') %>
            </div>
            <%= persona.fields_for :nutriologo do |nutriologo_fileds|  %>
              <div class="form-group">
                <%= nutriologo_fileds.text_field :cedula, placeholder: "oingresa tu cedula profesional" , class: ' form-control form-control-user'%>
              </div>
              <div class="form-group">
                <%= nutriologo_fileds.text_field :login, placeholder: "ingresa tu nombre de usuario" , class: ' form-control form-control-user'%>
              </div>
              <div class="form-group">
                <%= nutriologo_fileds.password_field :password, placeholder: 'ingresa password' , class: ' form-control form-control-user'%>
              </div>
              <div class="form-group">
                <%= nutriologo_fileds.password_field :password_confirmation , placeholder: 'confirma tu password', class: ' form-control form-control-user'%>
              </div>
            <% end %>
            <div class="form-group">
              <div class="row">
                  <%= persona.submit "Registrarse", class: "btn btn-primary btn-user btn-block" %>
              </div>
              <div class="row">
                <%= link_to "Volver", login_path, class: "btn btn-google btn-user btn-block" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
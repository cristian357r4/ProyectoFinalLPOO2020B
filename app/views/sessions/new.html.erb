
<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <!-- Nested Row within Card Body -->
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Bienvenido</h1>
              </div>
              <%= form_for(:session, :html => { role: "form"}, url: login_path, class: 'user', id: 'form_login' ) do |nutriologo| %>
                <div class="form-group">
                  <%= nutriologo.text_field(:login, placeholder: 'Ingresa tu correo...', class: 'form-control form-control-user' )%>
                </div>
                <div class="form-group">
                  <%= nutriologo.password_field(:password, placeholder: 'Password', class: 'form-control form-control-user' )%>
                </div>
                <%= nutriologo.submit 'Ingresar', class: 'btn btn-primary btn-user btn-block' %>
                <hr>
              <% end %>

              <div class="text-center">
                <%= link_to 'Registrarse', registrar_nutriologo_path,  class: 'btn btn-success btn-user btn-clock' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>

</div>
